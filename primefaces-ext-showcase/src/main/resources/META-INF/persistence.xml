<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="demo" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:app/mysql-demo</jta-data-source>
        <class>demo.entity.Students</class>
        <class>com.primefaces.ext.base.web.view.entity.BaseColumnModel</class>
        <class>com.primefaces.ext.base.web.view.entity.BaseAjaxModel</class>
        <class>com.primefaces.ext.base.web.view.entity.BaseDashboardModel</class>
        <class>com.primefaces.ext.base.web.view.entity.BasePanelModel</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>
        <validation-mode>NONE</validation-mode>
        <properties>
            <property name="eclipselink.session.customizer" value="com.primefaces.ext.base.util.UUIDSequence"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="hibernate.show_sql" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.sql-load-script-source" value="META-INF/init_dashboard.sql"/>
        </properties>
    </persistence-unit>
</persistence>
